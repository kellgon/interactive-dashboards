<script>
document.addEventListener('DOMContentLoaded', function () {
    // Churn Trend Chart
    const ctx = document.getElementById('churnTrendChart').getContext('2d');
    const churnTrendChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Q1 24', 'Q2 24', 'Q3 24', 'Q4 24', 'Q1 25', 'Q2 25', 'Q3 25 (Current)', 'Q4 25', 'Q1 26', 'Q2 26'],
            datasets: [{
                label: 'Historical Churn',
                data: [1.45, 1.40, 1.38, 1.30, 1.28, 1.26, 1.25, null, null, null],
                borderColor: '#4f46e5',
                backgroundColor: 'rgba(79, 70, 229, 0.1)',
                fill: true,
                tension: 0.4,
                borderWidth: 2,
            }, {
                label: 'Projected Churn (With Investment)',
                data: [null, null, null, null, null, null, 1.25, 1.15, 1.10, 1.05],
                borderColor: '#16a34a',
                borderDash: [5, 5],
                tension: 0.4,
                borderWidth: 2,
            },
             {
                label: 'Projected Churn (No Investment)',
                data: [null, null, null, null, null, null, 1.25, 1.45, 1.65, 1.80],
                borderColor: '#dc2626',
                borderDash: [5, 5],
                tension: 0.4,
                borderWidth: 2,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: false,
                    ticks: {
                        callback: function(value) {
                            return value.toFixed(2) + '%';
                        }
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return `${context.dataset.label}: ${context.parsed.y.toFixed(2)}%`;
                        }
                    }
                },
                annotation: {
                    annotations: {
                        investmentCycle1: {
                            type: 'line',
                            yMin: 1.3,
                            yMax: 1.3,
                            borderColor: 'rgb(255, 99, 132)',
                            borderWidth: 2,
                        }
                    }
                }
            },
             interaction: {
                intersect: false,
                mode: 'index',
            },
        }
    });

    // Map Interactivity
    const mapRegions = document.querySelectorAll('.map-region');
    const tooltip = document.getElementById('tooltip');
    const mapContainer = document.getElementById('map-container');

    mapRegions.forEach(region => {
        region.addEventListener('mousemove', function(e) {
            const regionName = this.dataset.region;
            const score = this.dataset.score;

            tooltip.style.opacity = '1';
            tooltip.style.left = (e.offsetX + 20) + 'px';
            tooltip.style.top = (e.offsetY) + 'px';
            tooltip.innerHTML = `<strong>${regionName}</strong><br>Score: ${score}`;
        });

        region.addEventListener('mouseleave', function() {
            tooltip.style.opacity = '0';
        });
    });
});
</script>
